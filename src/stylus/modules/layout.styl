*
	&:focus
		outline 0
html, body
	min-heght 76.8rem
	height 100vh
	overflow-x hidden
.row
	make-row()
	margin 0 auto
	max-width $SiteWidth //medida de la caja fija del dise√±o general
	padding-left 10px
	padding-right @padding-left
.ancla-terminos
	color $Naranja
	&:hover
			color lighten($Naranja, 20%)
		
.bgimg
	position absolute
	width 100%
.btn-reservar
	border solid 0.2rem white
	display block
	color white
	padding 0.3rem
	position absolute
	z-index 3
	top 50%
	left 50%
	transform translate(-50%, -50%)
	&:hover
		border-color darken($Naranja, 40%)
		color lighten($Naranja, 40%)
	&:focus
		border-color lighten($Naranja, 40%)
		color lighten($Naranja, 40%)
		text-decoration none
.content-logos
	height 6rem
.cabezote-fijo
	border 0 
	height 6rem
	margin 0
	padding 0
	position fixed
	width 100%
	z-index 8
.container
	text-align center
	z-index 10
.continuar-actividad, .boton-validar-placa, .button-actualizar-datos 
	display block
	margin 0 auto
.columna-form1
	div.msn-place
		font-family Arial
		font-size 2rem
		color $Naranja
// .columna-form2
// 	font-family Arial
